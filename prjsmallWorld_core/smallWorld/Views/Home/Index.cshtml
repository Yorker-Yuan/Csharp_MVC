@model smallWorld.Models.CLogin
@{
    ViewData["Title"] = "會員登入頁";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>會員登入</h1>

<h4>請輸入帳號密碼登入管理頁面</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <form asp-action="Index">
                <div class="form-group">
                    <label class="custom-control-label">帳號</label>
                    <input type="text" asp-for="fAccount" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">密碼</label>
                    <input type="password" asp-for="fPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="送出" />
                </div>
            </form>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>

@{

    if (TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]')
        </script>
    }
}