

@{
    ViewBag.Title = "登入";
    Layout = null;
    Html.EnableClientValidation();
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>會員登入</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <header>
        <h2>Small World會員登入系統</h2>
    </header>
    <div class="container">
        <div class="row">
            @using (Html.BeginForm())
            {

                <div class="form-horizontal">

                    <div class="form-group">
                        <label for="username">帳號:</label>
                        <div class="col-md-10">
                            @Html.TextBox("fAccount", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessage("validatemsg_fAccount", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password">密碼:</label>
                        <div class="col-md-10">
                            @Html.TextBox("fPassword", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessage("validatemsg_fPassword", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="登入" class="btn btn-default" />
                            @(Html.ActionLink("註冊","Register"))
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <footer>
        <p>Copyright © 2020 Small World. All rights reserved.</p>
    </footer>
    
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
            crossorigin="anonymous"></script>
</body>
</html>



