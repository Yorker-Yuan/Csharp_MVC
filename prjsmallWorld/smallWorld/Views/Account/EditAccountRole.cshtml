@model smallWorld.UserRole

@{
    ViewBag.Title = "編輯帳號權限";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>編輯帳號權限</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.fid)

        <div class="form-group">
            <label class="control-label col-md-2">會員編號</label>
            <div class="col-md-10">
                @Html.DropDownList("會員編號", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fUserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">會員身分</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.fRole, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fRole, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="送出" class="btn btn-default" />
            </div>
        </div>
    </div>
}

